@model ProjectPizzaWeb.Models.StatsViewModel

<div class="container-fluid">

    <h2>Statistics</h2>

    <div class="row">
        <div class="col-sm-4">
            <ul class="list-group">
                <li class="list-group-item list-group-item-heading list-group-item-warning">Revenue</li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6 text-bulletin-sm bulletin-border-right">@Html.DisplayFor(x => x.TotalIncome)</div>
                        <div class="col-xs-6 text-bulletin-sm">@Html.DisplayFor(x => x.AverageIncome)</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center bulletin-border-right">@Html.DisplayNameFor(x => x.TotalIncome)</div>
                        <div class="col-xs-6 text-center">@Html.DisplayNameFor(x => x.AverageIncome)</div>
                    </div>
                </li>
            </ul>
            <ul class="list-group">
                <li class="list-group-item">
                    <img src="~/images/stats.png" class="img-responsive" />
                </li>
            </ul>
        </div>
        <div class="col-sm-4">
            <ul class="list-group">
                <li class="list-group-item list-group-item-heading list-group-item-warning">Orders</li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6 text-bulletin bulletin-border-right">@Html.DisplayFor(x => Model.OrdersToday)</div>
                        <div class="col-xs-6 text-bulletin">@Html.DisplayFor(x => Model.OrdersThisWeek)</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center bulletin-border-right">@Html.DisplayNameFor(x => x.OrdersToday)</div>
                        <div class="col-xs-6 text-center">@Html.DisplayNameFor(x => x.OrdersThisWeek)</div>
                    </div>

                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6">@Html.DisplayNameFor(x => x.LastOrderTime)</div>
                        <div class="col-xs-6">
                            @Html.DisplayFor(x => Model.LastOrderTime)
                        </div>
                    </div>
                </li>
            </ul>

            <ul class="list-group">
                <li class="list-group-item list-group-item-heading list-group-item-warning">Dishes &amp; ingredients</li>
                <li class="list-group-item">

                    <div class="row">
                        <div class="col-xs-6 bulletin-border-right"">@Html.DisplayNameFor(x => x.MostPopularDish)</div>
                        <div class="col-xs-6">@Html.DisplayNameFor(x => x.MostPopularIngredient)</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-bulletin-xs bulletin-border-right">
                            <i>@Html.DisplayFor(x => x.MostPopularDish.Name)</i></div>

                        <div class="col-xs-6 text-bulletin-xs">@Html.DisplayFor(x => x.MostPopularIngredient.Name)</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6">@Html.DisplayNameFor(x => x.NumberOfDishes)</div>
                        <div class="col-xs-6">@Html.DisplayFor(x => Model.NumberOfDishes)</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6">@Html.DisplayNameFor(x => x.NumberOfIngredients)</div>
                        <div class="col-xs-6">@Html.DisplayFor(x => Model.NumberOfIngredients)</div>
                    </div>
                </li>
            </ul>
            
        </div>
        <div class="col-sm-4">
            <ul class="list-group">
                <li class="list-group-item list-group-item-heading list-group-item-warning">Deliveries</li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6 text-bulletin bulletin-border-right">@Html.DisplayFor(x => x.NumberOfDeliveredOrders)</div>
                        <div class="col-xs-6 text-bulletin ">@Html.DisplayFor(x => x.NumberOfDeliveredDishes)</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center bulletin-border-right">@Html.DisplayNameFor(x => x.NumberOfDeliveredOrders)</div>
                        <div class="col-xs-6 text-center">@Html.DisplayNameFor(x => x.NumberOfDeliveredDishes)</div>
                    </div>

                </li>
            </ul>

            <ul class="list-group">
                <li class="list-group-item list-group-item-heading list-group-item-warning">Carts</li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6 text-bulletin bulletin-border-right">@Html.DisplayFor(x => x.CartsCreated)</div>
                        <div class="col-xs-6 text-bulletin-sm">@Html.DisplayFor(x => x.ConversionRatioCartsOrders) %</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center bulletin-border-right">@Html.DisplayNameFor(x => x.CartsCreated)</div>
                        <div class="col-xs-6 text-center">@Html.DisplayNameFor(x => x.ConversionRatioCartsOrders)</div>
                    </div>
                </li>
            </ul>
        </div>
        
    </div>
</div>    