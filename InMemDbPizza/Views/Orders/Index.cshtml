@model IEnumerable<ProjectPizzaWeb.Models.Order>

@{
    ViewData["Title"] = "Manage orders";
}

<h2>Manage orders</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
                <span class="visible-xs hidden-sm">
                    / @Html.DisplayNameFor(model => model.Payment)
                </span>
            </th>
            <th class="hidden-xs">
                @Html.DisplayNameFor(model => model.Cart)
            </th>
            <th class="hidden-xs">
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                <a asp-action="Index" asp-route-viewMode="narrow" 
                   class="btn btn-default btn-sm pull-right" aria-label="Narrow list">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                </a>

                <a asp-action="Index" asp-route-viewMode="expanded" 
                   class="btn btn-default btn-sm pull-right" aria-label="Expanded list" style="margin-right: 5px">
                    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.OrderTime.ToShortDateString()
                @item.OrderTime.ToShortTimeString()
            </td>
            <td>
                @if(ViewBag.ViewMode != "narrow")
                {
                    <p>
                        <i>@item.Address.Name</i><br />
                        @item.Address.PostalAddress,
                        @item.Address.PostalCode
                        @item.Address.City<br />
                        Tel: @item.Address.Phone
                    </p>
                }

                <p class="visible-xs">
                    <i>Payment:</i> @item.Payment.PaymentType.Name
                </p>

                <a href="https://www.google.com/maps/search/?api=1&query=@item.Address.PostalAddress+@item.Address.PostalCode+@item.Address.City"
                @Html.ActionLink("View address", "View", "Address", null, null, null,
                    new { cartId = item.Address.AddressId }, null)
            </td>
            <td class="hidden-xs">
                @Html.ActionLink("View cart", "View", "Cart", null, null, null, 
                    new { cartId = item.CartId }, null)
            </td>
            <td class="hidden-xs">
                @Html.DisplayFor(modelItem => item.Payment.PaymentType.Name)
            </td>
            <td>
                @*<span class="hidden-xs" >
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                </span>

                <a class="visible-xs" asp-action="Edit" asp-route-id="@item.OrderId">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>*@
                
                @*<span class="hidden-xs">
                    <a asp-action="View" asp-controller="Cart" asp-route-cartId="@item.CartId">Details</a> |
                </span>

                <a class="visible-xs" asp-action="Details" asp-route-id="@item.OrderId">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>*@
                
                <a class="visible-xs" asp-action="View" asp-controller="Cart" asp-route-cartId="@item.CartId">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>

                <a class="hidden-xs" asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>

                <a class="visible-xs" asp-action="Delete" asp-route-id="@item.OrderId">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
